<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.run.CreateProfile_Act">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name:"
        android:id="@+id/nameField"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Interests: "
        android:id="@+id/interestView"
        android:layout_below="@+id/nameField"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Languages Known:"
        android:id="@+id/langKnownView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Languages Learning:"
        android:id="@+id/langLearningView"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/langKnownView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Data"
        android:onClick="addProfileInfo"
        android:id="@+id/addDataButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameEdit"
        android:layout_above="@+id/interestView"
        android:layout_alignStart="@+id/addDataButton"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interestsEdit"
        android:layout_alignBottom="@+id/interestView"
        android:layout_alignStart="@+id/nameEdit"
        android:layout_alignEnd="@+id/nameEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/langKnownEdit"
        android:layout_alignBottom="@+id/langKnownView"
        android:layout_alignEnd="@+id/interestsEdit"
        android:layout_toEndOf="@+id/addDataButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/langLearningEdit"
        android:layout_alignBottom="@+id/langLearningView"
        android:layout_alignEnd="@+id/langKnownEdit"
        android:layout_alignStart="@+id/langKnownEdit" />

</RelativeLayout>
