<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/MAIN"
    tools:context="com.example.pc.run.Profile_act">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:id="@+id/profileImageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/nameView"
        android:text="Name:"
        android:textSize="22dp"
        android:textColor="@color/WHITE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageView"/>

    <TextView
        android:id="@+id/interestsView"
        android:text="Interests:"
        android:textSize="22dp"
        android:textColor="@color/WHITE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameView"/>

    <TextView
        android:id="@+id/languagesKnownView"
        android:text="Laguages Known:"
        android:textSize="22dp"
        android:textColor="@color/WHITE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/interestsView"/>

    <TextView
        android:id="@+id/languagesLearningView"
        android:text="Languages Learning:"
        android:textSize="22dp"
        android:textColor="@color/WHITE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/languagesKnownView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Reviews"
        android:background="@color/buttonA"
        android:textColor="@color/WHITE"
        android:onClick="seeReviews"
        android:id="@+id/reviewButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
