<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context=".Friends.BlockUser">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Report"
        android:textColor="#C4D9B0"
        android:id="@+id/ReportText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="70dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reason:"
        android:textColor="@color/BLACK"
        android:id="@+id/ReasonText"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/ReportText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="32dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reasonSpinner"
        android:entries="@array/reportSpinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ReasonText"
        android:layout_above="@+id/blockCheckbox"
        android:layout_alignLeft="@+id/reportButton"
        android:layout_alignStart="@+id/reportButton"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-20dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Block this user (yes/no):"
        android:textSize="30dp"
        android:id="@+id/textView6"
        android:textColor="@color/BLACK"
        android:layout_below="@+id/ReasonText"
        android:layout_marginTop="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Leave a comment (optional):"
        android:id="@+id/textView7"
        android:textColor="@color/BLACK"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@drawable/boxforsubmit"
        android:id="@+id/commentThis"
        android:textColor="@color/BLACK"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Submit"
        android:background="@drawable/imageforreview"
        android:onClick="submitReport"
        android:id="@+id/reportButton"
        android:layout_below="@+id/commentThis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blockCheckbox"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

</RelativeLayout>