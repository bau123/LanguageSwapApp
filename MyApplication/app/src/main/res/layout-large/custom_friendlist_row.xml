<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5">

    <com.example.pc.run.Global.RoundedImageView
        android:src="@drawable/profile_filled"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/frProfileImage"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/BLACK"
        android:textSize="22dp"
        android:id="@+id/frNameText"
        android:layout_alignTop="@+id/frProfileImage"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/frProfileImage"
        android:layout_marginLeft="5dp"
        android:paddingTop="5dp" />

    <Button
        android:textSize="15dp"
        android:background="@drawable/ic_action_sms"
        android:textColor="@color/WHITE"
        android:id="@+id/frMessageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/frCallButton"
        android:layout_toStartOf="@+id/frCallButton"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp" />

    <Button
        android:textSize="15dp"
        android:background="@drawable/ic_action_phone_outgoing"
        android:textColor="@color/WHITE"
        android:id="@+id/frCallButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_action_star_5"
        android:textColor="@color/WHITE"
        android:id="@+id/reviewButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/frMessageButton"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp" />


</RelativeLayout>