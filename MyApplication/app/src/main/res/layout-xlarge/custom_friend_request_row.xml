<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/fqProfileImage" />

    <TextView
        android:id="@+id/fqNameView"
        android:text="Name"
        android:textSize="40dp"
        android:layout_toRightOf="@+id/fqProfileImage"
        android:layout_alignTop="@+id/fqProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/acceptButton"
        android:text="Accept"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="acceptFriendRequest"
        android:background="@drawable/mybutton"
        android:layout_toLeftOf="@+id/rejectButton"
        android:layout_toStartOf="@+id/rejectButton"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/rejectButton"
        android:text="Reject"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="rejectFriendRequest"
        android:background="@drawable/mybutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="20dp" />
</RelativeLayout>
