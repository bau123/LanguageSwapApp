<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ImageView
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/frProfileImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/BLACK"
        android:textSize="14dp"
        android:id="@+id/frNameText"
        android:layout_alignTop="@+id/frProfileImage"
        android:layout_toRightOf="@id/frProfileImage"
        android:layout_marginTop="25dp" />

    <Button
        android:textSize="15dp"
        android:background="@drawable/ic_action_smsxx"
        android:id="@+id/frMessageButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/frCallButton"
        android:layout_toStartOf="@+id/frCallButton"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" />

    <Button
        android:textSize="15dp"
        android:background="@drawable/ic_action_phone_outgoingxx"
        android:id="@+id/frCallButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_action_star_5xx"
        android:id="@+id/reviewButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/frMessageButton"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp" />


</RelativeLayout>