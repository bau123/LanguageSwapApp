<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

<ImageView
    android:src="@android:drawable/sym_def_app_icon"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/frProfileImage" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name"
    android:textSize="50dp"
    android:id="@+id/frNameText"
    android:layout_alignTop="@+id/frProfileImage"
    android:layout_toRightOf="@id/frProfileImage"
    android:layout_marginLeft="20dp"
    android:textColor="#000000"
    android:layout_marginTop="15dp" />

<Button
    android:textSize="25sp"
    android:text="Chat"
    android:id="@+id/frMessageButton"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/frCallButton"
    android:background="@drawable/mybutton"
    android:textColor="#ffffff"
    android:layout_alignBottom="@+id/frNameText"
    android:layout_marginTop="20dp" />

<Button
    android:textSize="25sp"
    android:text="Call"
    android:id="@+id/frCallButton"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:background="@drawable/mybutton"
    android:textColor="#ffffff"
    android:layout_alignBottom="@+id/frMessageButton"
    android:layout_marginTop="20dp" />


</RelativeLayout>